@{
    ViewBag.Title = "Home Page";
}
<header>
    <div class="header-container">
        @Html.Partial("_LoginPartial")
    </div>
</header>

@using Microsoft.AspNet.Identity
<div class="main">
    @if (Request.IsAuthenticated)
    {
        <div class="container index">
            <div class="title">
                Available Games
            </div>
            <div class="games"></div>
            <hr />
            <div class="title">
                New Game
            </div>
            <input type="text" placeholder="Game Name" id="game_name"/>
            <input type="number" min="2" max="5" placeholder="4" id="num_players"/>
            <div class="button" id="addgame">Add Game</div>
            <div class="whitespace"></div>
        </div>
        
        
        
        <script>
            var user = "@User.Identity.GetUserName()";
        </script>
        @Scripts.Render("~/Scripts/hanabi/index.js");
    }
    else
    {
        <div>Please log in to play</div>
    }
</div>